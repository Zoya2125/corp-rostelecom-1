<!DOCTYPE html>
<html lang="en">

<head>
    
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <script>
        document.write('<table style = "border-style : solid">');
        for (var a = 1; a <= 8; a++) {
            document.write('<tr>');
            if (a % 2 == 0) {
                for (var b = 1; b <= 8; b++) {
                    if (b % 2 == 0) {
                        document.write('<td style = "width : 15px; height : 15px; background-color : white"></td>');
                    }
                    else {
                        document.write('<td style = "width : 15px; height : 15px; background-color : black"></td>');
                    };
                };
            }
            else {
                for (var b = 1; b <= 8; b++) {
                    if (b % 2 == 0) {
                        document.write('<td style = "width : 15px; height : 15px; background-color : black"></td>');
                    }
                    else {
                        document.write('<td style = "width : 15px; height : 15px; background-color : white"></td>');
                    };
                };
            }
            document.write('</tr>');
        };
        document.write('</table>');

    </script>   

</body >

</html >
